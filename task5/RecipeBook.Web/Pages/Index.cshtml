@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center" style="margin-bottom: 30px;">
    <h1 class="display-4">Welcome to recipe book!</h1>
</div>

<div class="card-columns">
    @foreach (var recipe in Model.Recipes)
    {
        <div class="card">
            <div class="card-body">
                <h5><a class="text-dark text-decoration-none stretched-link" asp-page="Recipes/RecipeDetails" asp-route-name="@recipe.Name"> @recipe.Name</a></h5>
            </div>
        </div>
    }
</div>