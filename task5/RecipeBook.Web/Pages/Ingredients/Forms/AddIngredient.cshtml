@page
@model RecipeBook.Web.Pages.Ingredients.Forms.AddIngredientsModel
@{
    ViewData["Title"] = "AddIngredients";
}

<h1>@Model.Message</h1>

<form method="post">
    @Html.HiddenFor(m => m.Ingredient.Id)

    <div class="form-group">
        <label asp-for="Ingredient.Name">Ingredient</label>
        <input type="text" asp-for="Ingredient.Name" value="@Model.Ingredient?.Name" class="form-control" placeholder="Enter ingredient" required />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
