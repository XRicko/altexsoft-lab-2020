@page
@model CategoriesListModel
@{
    ViewData["Title"] = "Categories";
}

<div class="text-left">
    <h1>Categories</h1>
</div>

<div class="card-columns">
    @foreach (var category in Model.Categories)
    {
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><a class="text-dark text-decoration-none" asp-page-handler="TopCategories" asp-route-categoryName="@category.Name">@category.Name</a></h5>
            </div>

            <div class="card-body">
                @foreach (var subcategory in category.Children)
                {
                    <p class="card-text"><a class="text-dark text-decoration-none" asp-page-handler="Subcategories" asp-route-categoryName="@subcategory.Name">@subcategory.Name</a></p>
                }
            </div>
        </div>
    }
</div>
