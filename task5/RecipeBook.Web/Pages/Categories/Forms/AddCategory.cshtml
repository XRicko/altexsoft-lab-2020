@page
@model RecipeBook.Web.Pages.Categories.Forms.AddCategoryModel
@{
    ViewData["Title"] = "AddCategory";
}

<h1>@Model.Message</h1>


<form method="post">
    @Html.HiddenFor(m => m.Category.Id)

    <div class="form-group">
        <label asp-for="Category.Name">Category</label>
        <input type="text" asp-for="Category.Name" value="@Model.Category?.Name" class="form-control" placeholder="Enter category" required />
    </div>

    <div class="form-group">
        <label asp-for="ParentName">Parent category</label>
        <input type="text" asp-for="ParentName" value="@Model.Category?.Parent?.Name" class="form-control" placeholder="Enter parent category" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>