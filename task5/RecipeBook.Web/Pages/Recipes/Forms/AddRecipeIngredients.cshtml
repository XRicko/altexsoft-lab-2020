@page
@model RecipeBook.Web.Pages.Forms.AddRecipeIngredientsModel
@{
    ViewData["Title"] = "AddRecipeIngredients";
}

<h1>Add details to ingredients</h1>

<form method="post">
    @Html.HiddenFor(m => m.RecipeId)
    @Html.HiddenFor(m => m.Recipe.Name)
    @Html.HiddenFor(m => m.CategoryName)
    @Html.HiddenFor(m => m.ParentCategoryName)
    @Html.HiddenFor(m => m.Recipe.Description)
    @Html.HiddenFor(m => m.Ingredients)
    @Html.HiddenFor(m => m.Recipe.Instruction)
    @Html.HiddenFor(m => m.Recipe.DurationInMinutes)

    @for (int i = 0; i < Model.RecipeIngredients.Count; i++)
    {
        <div class="form-group">
            <label asp-for="@Model.RecipeIngredients[i].Amount">Amount for @Model.RecipeIngredients[i].Ingredient.Name</label>
            <input type="text" class="form-control" asp-for="@Model.RecipeIngredients[i].Amount" value="@Model.RecipeIngredients?[i].Amount" placeholder="Enter amount of @Model.RecipeIngredients[i].Ingredient.Name" required />
        </div>
    }
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

